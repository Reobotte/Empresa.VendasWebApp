@model Empresa.VendasWebApp.ViewModels.ProdutoCategoriaViewModel

@{
    ViewData["Title"] = "Excluir Produto";
}

<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6 p25">
        <div class="card">
            <div class="card-header">
                <h3>@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Descricao)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Descricao)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Preco)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Preco)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Status)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Categoria.Descricao)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Categoria.Descricao)
                    </dd>
                </dl>
                <form id="formulario" asp-action="Delete">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="Id" hidden />
                    <input asp-for="Descricao" hidden />
                    <input asp-for="Preco" hidden />
                    <input asp-for="Status" hidden />
                    <input asp-for="CategoriaId" hidden />
                </form>
            </div>
            <div class="card-footer bg-transparent">
                <button type="submit"
                        class="btn btn-outline-dark mr-0 mb-0"
                        title="Salvar"
                        data-toggle="modal"
                        data-target="#minhaModal">
                    &nbsp;<i class="fa-solid fa-trash-can"></i> Excluir&nbsp;&nbsp;
                </button>
                @await Html.PartialAsync("PartialViews/_ReturnButtonPartial")
            </div>
        </div>
    </div>
</div>

<vc:buttonscrud title="@ViewData["Title"]"></vc:buttonscrud>
