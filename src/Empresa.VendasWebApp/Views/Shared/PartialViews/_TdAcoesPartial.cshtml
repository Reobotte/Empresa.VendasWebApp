<td>
    <a asp-action="Details" asp-route-id="@Model.Id"
       class="btn btn-outline-dark btn-sm" onclick="MsgAguarde();" title="Visualizar @ViewData["Title"]"><i class="fa-solid fa-eye"></i></a>
    <a asp-action="Edit" asp-route-id="@Model.Id"
       class="btn btn-outline-dark btn-sm" onclick="MsgAguarde();" title="Alterar @ViewData["Title"]"><i class="fa-solid fa-pen-to-square"></i></a>
    <a asp-action="Delete" asp-route-id="@Model.Id"
       class="btn btn-outline-dark btn-sm" onclick="MsgAguarde();" title="Excluir @ViewData["Title"]"><i class="fa-solid fa-trash-can"></i></a>
</td>
